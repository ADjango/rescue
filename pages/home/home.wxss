/* pages/home/home.wxss */
page {
  width: 100%;
  height: 100%;
  padding: 20px;
  box-sizing: border-box;
  /* background: #A8DADC; */
}

.card {
  padding: 15px;
  /* background: #F1FAEE; */
  box-shadow: 0px 2px 20px 0px rgba(225, 225, 225, 0.47);
  border-radius: 6px;
}

.fluid {
  width: 100%;
  box-sizing: border-box;
}

.icon {
  width: 16px;
  height: 16px;
}

.item {
  padding: 0;
  width: calc((100% - 20px)/2);
  height: 80px;
}

.input-wrap {
  width: 100%;
}

.input-wrap input {
  flex: 1;
}

.input-label {
  margin-right: 15px;
}