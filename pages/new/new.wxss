/* pages/new/new.wxss */
page {
  width: 100%;
  height: 100%;
}
.center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pad {
  padding: 15px;
}

.icon {
  margin-left: 10px;
  width: 24px;
  height: 24px;
}

.title {
  border-bottom: 1px solid #F4F4F4;
}

.item {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.text {
  display: flex;
  flex: 1;
}

.divider {
  width: 100%;
  height: 10px;
  background: #F6F7F8;
}

.buttom_area {
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
}

.thumbnail {
  width: 90px;
  height: 90px;
  background: burlywood;
  margin-bottom: 10px;
  border-radius: 2px;
}

.signature {
  width: 100%;
  height: 200px;
  background: burlywood;
}