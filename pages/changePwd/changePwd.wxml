<!--pages/changePwd/changePwd.wxml-->
<view>
  <view class="input-wrap rowCenter">
    <text class="input-label">手机号码</text>
    <input type="number" bindinput="bindPhoneInput" value="{{userInfo.phone}}"/>
  </view>
  <view class="input-wrap rowCenter" style="margin:20px 0;">
    <text class="input-label">登录密码</text>
    <input type="password" bindinput="bindPasswordInput" placeholder="请输入新的登录密码"/>
  </view>
  <view class="input-wrap rowCenter" style="margin:20px 0;">
    <text class="input-label">验证密码</text>
    <input type="password" bindinput="bindPasswordInputAgain" placeholder="请再次输入新的登录密码"/>
  </view>
  <button type="primary" style="width:100%;" bindtap="onSubmit">提交</button>
</view>
